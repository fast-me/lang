{
  "name": "fast-lsp",
  "description": "LSP for the Fast Language",
  "author": "Zaid Daghestani",
  "license": "Â© Zaid Daghestani",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fast-me/lang"
  },
  "publisher": "Zaid Daghestani",
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "*"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Fast Language Server",
      "properties": {
        "fls.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "fls.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "bun build ./client/index.tsx --outdir ./build",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh"
  }
}
